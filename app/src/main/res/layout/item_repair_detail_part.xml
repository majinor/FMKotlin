<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_part_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:text="Oli" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_part_brand"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:text="-" />


            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_part_quantity"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_part_unit"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:text="-" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/lightgrey"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_part_sku"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:text="MDTW-001-OLI"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_part_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:text="ID Part"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey" />


    </LinearLayout>


</LinearLayout>